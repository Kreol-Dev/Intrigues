simple_wander = {
	scope = entity.movable
	category = wander
	utility = 0.1
	animation = walk
	start = {
		cache(point) = random_point(entity.position, 5)
		movable = {
			goto_point(0.2) = point
			speed = 1
			cache(mov) = this
		}
	}
	finished = mov.near_target
	wait = 5
	interruption = restart

	finish = {
		mov.clear = yes
	}
	terminate = {
		mov.clear = yes
	}

}

