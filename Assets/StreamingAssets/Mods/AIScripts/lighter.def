lit_up_interaction = {
	at(lit_up_metric,3, for_interaction) = all_entities
	interaction = light_source.fit(not lit_up)
	scope = manual

	category = do_stuff
	utility = 0.2
	animation = use
	other_animation = none
	during(near) = {
		distance = 1
	}
	

	wait = 5
	interruption = restart

	finish = {
		other.light_source.lit_up = yes
		log = "finished lighting " + other
	}
}